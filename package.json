{
  "name": "classes-and-diagrams",
  "version": "1.0.0",
  "description": "Demo project for classes and class diagrams",
  "main": "index.js",
  "scripts": {
    "test": "npm run prettier; npm run eslint; npm run jest",
    "jest": "jest",
    "eslint": "eslint .",
    "prettier": "prettier --check ."
  },
  "author": "Fran√ßois ROLAND <francois.roland@iepscf-uccle.be>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "eslint": "^7.17.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "google",
      "prettier",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "require-jsdoc": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
